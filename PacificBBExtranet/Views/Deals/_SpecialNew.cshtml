@model PacificBBExtranet.Services.Models.Deals.SpecialModel

<div id="id_specialNewForm">
    @using (Html.UcBeginForm("SpecialNew", "Deals", "id_specialNewForm"))
    {
        @Html.UcTextBoxFor(x => x.Name, "Name", 3)
        @Html.UcDropDownListFor(x => x.selectedRoom, "Room", 3, Model.RoomList)

        @Html.DialogFormSubmitButtons()
    }
</div>


@if (ViewBag != null && ViewBag.Success == true)
{
    <div class="container" style="margin-top:10px;">
        <div class="alert alert-success">
            <strong>Saved successfully!</strong>
        </div>
    </div>
    <script type="text/javascript">

        $.get("/Deals/SpecialsDropDown", { selectedSpecialID: $("#SelectedSpecial").val() }, function (response) {
            $("#id_specialsDropDown").html(response);
        })
        $("#id_specialNewForm").find("[data-dismiss]").click();
    </script>



}