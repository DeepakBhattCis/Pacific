@model PacificBBExtranet.Services.Models.Deals.DealsIndexModel

@Html.UcDropDownListFor(x => x.SelectedSpecial, "Specials", 0, Model.SpecialsList)


<script type="text/javascript">
    $(document).ready(function () {
        $("#SelectedSpecial").on("change", function () {
            var val = $(this).val();
            if (val != "") {
                $("#id_dealsPanel li.active > a").trigger("click");
            }

        })
    })
</script>
